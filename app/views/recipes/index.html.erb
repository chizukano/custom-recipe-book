<div class="bg-white m-3 p-2">
  <h1>RECIPES FOR <%= @category.name.upcase %></h1>
    <% @recipes.each do |recipe| %>
      <div class="col-3">
      <%= link_to recipe_path(recipe), class:"card rounded-1 m-3 text-decoration-none" do %>
          <h5 class="text-center"><%= recipe.name %></h5>
          <%= cl_image_tag recipe.photo.key, class: "card-img img-fluid", height: 200, width: 300, crop: :fill %>
      <% end %>
      </div>
    <% end %>
</div>
<div class="bg-white m-3 p-3">
  <div class="col-6">
    <h2 class="h4">Add a new recipe</h2>
    <%= simple_form_for [@recipe] do |f| %>
      <%= f.input :name, placeholder: "Recipe Name", label: false %>
      <%= f.input :description, placeholder: "Recipe Note (if any)", label: false %>
      <%= f.input :portion, placeholder: "# of servings", label: false %>
      <%= f.input :category, label: "choose the category", collection: @categories %>
      <%= f.input :photo, label: false %>
      <%= f.submit "Add to the list", class: "btn btn-info" %>
    <% end %>
  </div>
</div>
