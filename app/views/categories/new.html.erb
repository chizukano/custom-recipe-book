<div class="bg-white m-3 p-3">
  <div class="col-6">
    <h2 class="h4">Add a new food category</h2>
    <%= simple_form_for @category do |f| %>
      <%= f.input :name, placeholder: "Name of Category", label: false %>
      <%= f.input :photo, label: false %>
      <%= f.submit "Add to the list", class: "btn btn-info" %>
    <% end %>
  </div>
</div>
