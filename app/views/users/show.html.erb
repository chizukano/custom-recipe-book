<div class="bg-white m-3 p-2">
  <h1>Cookbook for <%= @user.username %></h1>
  <div class="m-3 p-2">
  <h4>By Categories</h4>
    <div class="row">
      <% @user.categories.each do |category| %>
        <%= render "categories/index_card", category: category %>
      <% end %>
      <div class="col-4">
        <%= link_to new_category_path, class:"card border-0 bg-body text-decoration-none h-100" do %>
          <h6 class="card-body align-items-center d-flex justify-content-center text-muted">
            <%= icon "fa", "circle-plus", class: "me-1 small" %>Add a category
          </h6>
        <% end %>
      </div>
    </div>
  </div>
  <div class="m-3 p-2">
    <h4>By Recipes</h4>
    <div class="row">
      <% @user.recipes.each do |recipe| %>
        <%= render "recipes/index_card", recipe: recipe %>
      <% end %>
      <div class="col-3">
        <%= link_to new_recipe_path, class:"card border-0 bg-body h-100 text-decoration-none" do %>
          <h6 class="card-body align-items-center d-flex justify-content-center text-muted">
            <%= icon "fa", "circle-plus", class: "me-1 small" %>Add a recipe
          </h6>
        <% end %>
      </div>
    </div>
  </div>
</div>
