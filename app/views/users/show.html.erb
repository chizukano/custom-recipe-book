<div class="bg-white m-3 p-2">
  <h1>Cookbook for <%= @user.username %></h1>
  <h2>By Categories</h2>
  <div class="row">
    <% @user.categories.each do |category| %>
      <%= render "categories/index_card", category: category %>
    <% end %>
  </div>
    <div class="col-4">
      <%= link_to new_category_path, class:"btn btn-info mt-3 mb-3 text-decoration-none" do %>
        <h3 class="text-center">
          <%= icon "fa", "circle-plus", class: "me-1 small" %>Add a category
        </h3>
      <% end %>
    </div>

  <h2>By Recipes</h2>
  <div class="row">
    <% @user.recipes.each do |recipe| %>
      <%= render "recipes/index_card", recipe: recipe %>
    <% end %>
  </div>
    <div class="col-3">
      <%= link_to new_recipe_path, class:"btn btn-info rounded-1 mt-3 mb-2 text-decoration-none" do %>
        <h3 class="text-center">
          <%= icon "fa", "circle-plus", class: "me-1 small" %>Add a recipe
        </h3>
      <% end %>
    </div>
</div>
