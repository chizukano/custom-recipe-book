<div class="bg-white m-3 p-2">
  <h1>Cookbook for <%= @user.username %></h1>
  <div class="row">
    <% @user.categories.each do |category| %>
      <%= render "categories/index_card", category: category %>
    <% end %>
    <div class="col-4">
      <%= link_to new_category_path, class:"card text-decoration-none h-100" do %>
        <h3 class="text-center">
          <%= icon "fa", "circle-plus", class: "me-1 small" %>Add a new recipe
        </h3>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @user.recipes.each do |recipe| %>
      <%= render "recipes/index_card", recipe: recipe %>
    <% end %>

    <div class="col-3">
      <%= link_to new_recipe_path, class:"card rounded-1 mt-3 mb-2 text-decoration-none h-100" do %>
        <h3 class="text-center">
          <%= icon "fa", "circle-plus", class: "me-1 small" %>Add a new recipe
        </h3>
      <% end %>
    </div>
  </div>
</div>
